<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">0dp</dimen>
    <dimen name="activity_vertical_margin">0dp</dimen>

    <dimen name="largeMargin">48dp</dimen>
    <dimen name="middleMarin">32dp</dimen>
    <dimen name="smallMargin">16dp</dimen>

    <!--
        Button elevation and zTranslation
        Z Value is the sum of elevation and zTranslation.
        elevation is the start value of shadow (static value).
        zTranslation gives additional elevation used for animation (dynamic value).
    -->
    <dimen name="button_elevation">2dp</dimen>
    <dimen name="button_z_translation">2dp</dimen>
    <dimen name="button_pressed_z_translation">0dp</dimen>
    <dimen name="button_disabled_z_translation">-2dp</dimen>

</resources>
