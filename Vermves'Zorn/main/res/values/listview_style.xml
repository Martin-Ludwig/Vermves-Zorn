<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="listview_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">65dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="listview_item_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">4dp</item>
    </style>
</resources>